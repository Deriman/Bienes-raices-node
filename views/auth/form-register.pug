extends ../layout/index

block contenido
    div(class="my-10")
        h1(class="text-4xl my-10 font-extrabold text-center") Bienes
            span(class="font-normal") Raices
    h2(class="text-center text-2xl font-extrabold")=pagina 
    div(class="mt-8 mx-auto max-w-md")
        div(class="bg-white py-8 px-4 shadow")
            form(class="space-y-5" method="POST" action="/auth/register")
                div 
                    label(class="block text-sm uppercase text-gray-500 mb-3 font-bold" for="name") Tu nombre
                    input(class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" placeholder="Tu nombre" type="text" name="name" #name)
                div 
                    label(class="block text-sm uppercase text-gray-500 mb-3 font-bold" for="email") Tu email de registro
                    input(class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" placeholder="Tu email" type="email" name="email" #email)
                div 
                    label(class="block text-sm uppercase text-gray-500 mb-3 font-bold" for="password") Tu password
                    input(class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" placeholder="Tu password" type="password" name="password" #password)
                div 
                    label(class="block text-sm uppercase text-gray-500 mb-3 font-bold" for="repetir_password") Repite tu password
                    input(class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" placeholder="Repite tu password" type="password" name="repetir_password" #repetir_password)
                div(class="flex items-center justify-between")
                    a(href="/auth/form-login" class="text-gray-500 text-xs") ¿Ya tienes cuenta?. Inicia sesión.
                    a(href="/auth/forgot-password" class="text-gray-500 text-xs") Olvidé mi password.  
                input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer" type="submit" value="Crear cuenta")