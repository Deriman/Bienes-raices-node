extends ../layout/index

block contenido
    div(class="my-10")
        h1(class="text-4xl my-10 font-extrabold text-center") Bienes
            span(class="font-normal") Raices
    h2(class="text-center text-2xl font-extrabold")=pagina
    if errors  
        div(class="max-w-md mx-auto my-10")
            p(class="bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold")=errors[0].msg 
    div(class="mt-8 mx-auto max-w-md")
        div(class="bg-white py-8 px-4 shadow")
            form(class="space-y-5" method="POST" action="/auth/forgot-password" noValidate)
                input(type="hidden" name="_csrf" value= csrf)
                div 
                    label(class="block text-sm uppercase text-gray-500 mb-3 font-bold" for="email") Tu email de registro
                    input(class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" placeholder="Tu email" type="email" name="email" #email)
                div(class="flex items-center justify-between")
                    a(href="/auth/form-register" class="text-gray-500 text-xs") ¿No tienes cuenta?. Cree una cuenta
                    a(href="/auth/form-login" class="text-gray-500 text-xs") ¿Ya tienes cuenta?. Inicia sesión.
                input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer" type="submit" value="Recuperar acceso")