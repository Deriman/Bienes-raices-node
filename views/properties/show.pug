extends ../layout/app

block contenido 
    //-pre= JSON.stringify(property, undefined, 2)
    div(class="py-5")
        h1(class="text-center font-extrabold text-4xl my-10")= property.title
        div     
            a(href="#" class="font-bold text-gray-600 text-sm") Categoria: 
                span(class="font-normal")= property.category.name
        div(class="mt-5 md:flex md:gap-4")
            div(class="md:w-2/3 bg-white shadow rounded-lg") 
                img(src=`/uploads/${property.images}`, alt=`Imagen de ${property.title}`)
                div(class="px-5 py-10 space-y-5")
                    p= property.description
                    h2(class="text-2xl leading-6 font-bold text-gray-900") Informaci√≥n de la propiedad 
                    div(class="grid grid-cols-1 md:grid-cols-2")
                        p(class="text-gray-600 font-bold text-xs") WC   
                            span(class="text-gray-800 block text-lg")= property.wc
                        p(class="text-gray-600 font-bold text-xs") Estacionamientos   
                            span(class="text-gray-800 block text-lg")= property.estacionamientos
                        p(class="text-gray-600 font-bold text-xs") Habitaciones   
                            span(class="text-gray-800 block text-lg")= property.habitaciones
                        p(class="text-gray-600 font-bold text-xs") Precio   
                            span(class="text-gray-800 block text-lg")= property.price.name
            div(class="md:w-1/3") 2